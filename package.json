{
    "author": "Ragaeeb Haq",
    "bugs": {
        "url": "https://github.com/ragaeeb/flappa-doormal/issues"
    },
    "description": "Arabic text marker pattern library for generating regex from declarative configurations",
    "devDependencies": {
        "@biomejs/biome": "2.3.14",
        "@types/bun": "^1.3.8",
        "shamela": "^1.5.2",
        "tsdown": "^0.20.2",
        "typescript": "^5.9.3"
    },
    "engines": {
        "bun": ">=1.3.8",
        "node": ">=24.0.0"
    },
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.mts"
        }
    },
    "files": [
        "dist",
        "README.md",
        "AGENTS.md"
    ],
    "homepage": "https://github.com/ragaeeb/flappa-doormal#readme",
    "keywords": [
        "arabic",
        "text-processing",
        "hadith",
        "islamic-texts",
        "nlp",
        "regex",
        "pattern-matching",
        "marker-detection"
    ],
    "license": "MIT",
    "module": "./dist/index.mjs",
    "name": "flappa-doormal",
    "packageManager": "bun@1.3.8",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ragaeeb/flappa-doormal.git"
    },
    "scripts": {
        "build": "tsdown",
        "format": "biome format --write",
        "lint": "biome check",
        "postbuild": "bun run test:exports",
        "test": "bun test",
        "test:exports": "bunx tsc --noEmit testing/exports.test.ts --moduleResolution bundler --target esnext --module esnext --esModuleInterop --skipLibCheck --types bun-types,node && bun test testing/exports.test.ts",
        "test:perf": "RUN_PERF=true bun test src/segmentation/segmenter.perf.test.ts src/validation/validate.perf.test.ts"
    },
    "type": "module",
    "types": "./dist/index.d.mts",
    "version": "2.17.0"
}
